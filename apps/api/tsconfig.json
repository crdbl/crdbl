{
  "extends": "fastify-tsconfig",
  "compilerOptions": {
    "outDir": "dist",
    "sourceMap": true,
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "target": "ES2022",
    "esModuleInterop": true,
    "paths": {
      "@crdbl/utils": ["../../libs/utils/src/index.ts"],
      "@crdbl/utils/*": ["../../libs/utils/src/*"]
    }
  },
  "references": [
    {
      "path": "../../libs/utils"
    }
  ],
  "include": ["src/**/*.ts"]
}
